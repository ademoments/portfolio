---
const { id, title, subtitle } = Astro.props as { id: string; title: string; subtitle?: string };
---
<section id={id} class="py-20 md:py-28 max-w-5xl mx-auto px-6">
  <div class="mb-10">
    <h2 class="text-2xl md:text-3xl font-bold">{title}</h2>
    {subtitle && <p class="text-slate-500 dark:text-slate-400 mt-2">{subtitle}</p>}
  </div>
  <slot />
</section>
